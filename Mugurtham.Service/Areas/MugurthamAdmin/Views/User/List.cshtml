@{
    ViewBag.Title = "List";
    Layout = "~/Areas/MugurthamAdmin/Views/Shared/LayoutMugurthamAdmin.cshtml";
}
<div id="divUserList" data-ng-init="getLookup();">
    <p class="lead">User List</p>
    <hr />
    <div class="col-lg-12" data-ng-init="getAllUsers();">
        <ul class="breadcrumb">
            <li class="active">List</li>
        </ul>
    </div>
    <div class="col-lg-12">
        <table>
            <tr>
                <td>
                    <button id="btnSave" name="btnSave" class="btn btn-primary" onclick="javascript:window.location='#UserForm';">Add User</button></td>

                <td>&nbsp;Filter by Role &nbsp; </td>
                <td>
                    <select class="form-control"  ng-model="frmData[0].RoleID" id="ddlRoles">
                        <option value="">All Roles</option>
                        <option ng-repeat="Role in arrRoleID" value="{{Role.ID}}">{{Role.Name}}</option>
                    </select>
                </td>
                <td>&nbsp;Name &nbsp;</td>
                <td>
                    <input type="text" class="form-control" ng-model="frmData[0].Name" placeholder="Name of the User">
                </td>
            </tr>
            <tr>
            </tr>
        </table>
    </div>

    <div class="col-lg-12">
        <br />
    </div>
    <table class="mugurthamTable table-striped table-bordered table-hover FormShadow">
        <thead>
            <tr>
                <th>Name</th>
                <th>Sangam</th>
                <th>IsActivated</th>
            </tr>
        </thead>
        <tbody class="example-animate-container">
            <tr class="animate-repeat" ng-repeat="User in AllUsers | filter: {RoleID: frmData[0].RoleID, Name: frmData[0].Name} | orderBy:'Name'">
                <td><a href="#UserForm/{{User.ID}}">{{User.Name}}</a></td>
                <td>{{User.SangamName}}</td>
                <td>{{User.IsActivated}}</td>
            </tr>
        </tbody>
    </table>
</div>



