@{
    ViewBag.Title = "RoleList";
    Layout = "~/Areas/MugurthamAdmin/Views/Shared/LayoutMugurthamAdmin.cshtml";
}
<p class="lead">Role List</p>
<hr />
<div class="col-lg-12" data-ng-init="getAllRoles();">
    <ul class="breadcrumb">
        <li class="active">List</li>
    </ul>
    <button id="btnSave" name="btnSave" class="btn btn-primary" onclick="javascript:window.location='#RoleForm';">Add Role</button>
</div>
<div class="col-lg-12">
    <br />
</div>
<table class="mugurthamTable table-striped table-bordered table-hover FormShadow">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
        </tr>
    </thead>
    <tbody>
        <tr ng-repeat="Role in AllRoles | orderBy: 'Name'">
            <td><a href="#RoleForm/{{Role.ID}}">{{Role.Name}}</a></td>
            <td>{{Role.Description}}</td>
        </tr>
    </tbody>
</table>



