@{
    Layout = "~/Areas/MugurthamAdmin/Views/Shared/LayoutMugurthamAdmin.cshtml";
}
<p class="lead">Role Form</p>
<hr />
<div class="col-lg-12" data-ng-init="getRoleByID();">
    <ul class="breadcrumb">
        <li><a href="#RoleList">List</a></li>
        <li class="active">Form</li>
    </ul>
    <div class="col-lg-8">
        <div class="panel panel-primary bs-example well bs-component FormShadow">
            <div class="panel-heading">
                <h3 class="panel-title text-center">Role Registration Form
                </h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-sm-12">
                        <form class="form-horizontal">
                            <div class="form-group">
                                <label for="RoleName" class="col-lg-3 control-label">Role Name</label>
                                <div class="col-lg-9">
                                    <input type="text" class="form-control" id="txtNomineeName" name="txtNomineeName" ng-model="frmData[0].Name" placeholder="Name of the Role">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="Address" class="col-lg-3 control-label">Description</label>
                                <div class="col-lg-9">
                                    <textarea class="form-control" id="txtDescription" name="txtDescription" ng-model="frmData[0].Description" placeholder="Describe Role"></textarea>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-lg-10 col-lg-offset-10">
                                    <button id="btnSave" name="btnSave" class="btn btn-primary" ng-click="saveFormData();">Save</button>
                                </div>
                            </div>



                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-4">
        <blockquote>
            <p>This form is used to collect infomration about the Role where the profiles are mapped to</p>
        </blockquote>
    </div>




</div>
