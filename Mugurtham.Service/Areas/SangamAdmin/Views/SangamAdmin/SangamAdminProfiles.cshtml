@{
    Layout = "~/Areas/SangamAdmin/Views/Shared/LayoutSangamAdmin.cshtml";
    Mugurtham.Core.Login.LoggedInUser objLoggedIn = (Mugurtham.Core.Login.LoggedInUser)Session["LoggedInUser"];
}

<div id="divUserList" data-ng-init="getLookup();">
    <p class="lead">Profiles List</p>
    <hr />
    <div class="col-lg-12" data-ng-init="getAllUsers();">
        <ul class="breadcrumb">
            <li >Home</li>
            <li class="active">List</li>
        </ul>
    </div>
    <div class="col-lg-12">
        <table>
            <tr>
                <td>
                <td>&nbsp;Filter by Profile ID &nbsp;</td>
                <td>
                    <input type="text" class="form-control" ng-model="frmData[0].LoginID" placeholder="ProfileID of the User">
                </td>
                <td>&nbsp;Name &nbsp;</td>
                <td>
                    <input type="text" class="form-control" ng-model="frmData[0].Name" placeholder="Name of the User">
                </td>
            </tr>
            <tr>
            </tr>
        </table>
    </div>

    <div class="col-lg-12">
        <br />
    </div>
    <table class="mugurthamTable table-striped table-bordered table-hover FormShadow">
        <thead>
            <tr>
                <th>Profile ID</th>
                <th>Name</th>
                <th>IsActivated</th>
            </tr>
        </thead>
        <tbody class="example-animate-container">
            <tr class="animate-repeat" ng-repeat="User in AllUsers | filter: {SangamID: '@objLoggedIn.sangamID', LoginID: frmData[0].LoginID, Name: frmData[0].Name} | orderBy:'Name'">
                <td><a href="#/BasicInfo/{{User.LoginID}}">{{User.LoginID}}</a></td>
                <td>{{User.Name}}</td>
                <td>{{User.IsActivated}}</td>
            </tr>
        </tbody>
    </table>
</div>




